@model IEnumerable<PROG3050_CVGSClub.Models.Games>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Games</h2>

<p style="text-align:left;">
    <a asp-action="Create">Create New</a>
    <span style="float:right;">
        <a asp-controller="GameLibraries" asp-action="Index">Game Library</a>
    </span>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailablePlatforms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPlayers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailablePlatforms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPlayers)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a> |
                    <a asp-route-id="@item.GameId">Add to Cart</a> |
                    <a asp-route-id="@item.GameId">Add to Wish List</a> |
                    <a asp-route-id="@item.GameId">Rate</a> |
                    <a asp-route-id="@item.GameId">Review</a>
                </td>
            </tr>
        }
    </tbody>
</table>