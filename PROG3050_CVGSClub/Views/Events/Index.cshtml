@model IEnumerable<PROG3050_CVGSClub.Models.Events>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Events</h2>

<p>
	<a asp-area="" asp-controller="MemberEvents" asp-action="Index">View My Events</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Event Name
            </th>
            <th>
                Event Date
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th>
                Capacity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
			<td>
				<a asp-action="Subscribe" asp-route-id="@item.EventId">Attend</a>
			</td>
        </tr>
}
    </tbody>
</table>
