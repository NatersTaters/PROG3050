@model IEnumerable<PROG3050_CVGSClub.Models.FriendsFamily>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Friends & Family</h2>

<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th style="text-align:center">
                Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.Member.DisplayName)
            </td>
            <td style="text-align:center">
                <a asp-action="Details" asp-route-id="@item.FriendFamilyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FriendFamilyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p style="text-align:center"><a asp-action="Create"><input value="Add a New Friend!"class="btn btn-primary"></a></p>
