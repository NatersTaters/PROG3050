@model IEnumerable<PROG3050_CVGSClub.Models.GameReviews>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Game Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Game Review
            </th>
            <th>
                Game
            </th>
            <th hidden>
                Member
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameReview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameName)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.Member.MemberId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
