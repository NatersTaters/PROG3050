@model PROG3050_CVGSClub.Models.GameReviews

@{
    ViewData["Title"] = "Create";
}

<h2 style="text-align:center">Create a Review</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group" hidden>
				<label asp-for="GameId" class="control-label"></label>
				<input asp-for="GameId" class="form-control" value="@ViewContext.RouteData.Values["id"]"/>
				<span asp-validation-for="GameReview" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="GameReview" class="control-label">Game Review</label>
                <input asp-for="GameReview" class="form-control" />
                <span asp-validation-for="GameReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
	<a asp-area="" asp-controller="GameLibraries" asp-action="Index">Back to Game Library</a>
</div>

